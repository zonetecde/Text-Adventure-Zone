<UserControl x:Class="Text_adventure_maker.UserControl_Projet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Text_adventure_maker"
             mc:Ignorable="d" 
             Height="76" d:DesignWidth="500" BorderBrush="Black" Loaded="UserControl_Loaded">
    <Grid>
        <Image x:Name="img_icon" Margin="5,3,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Height="70" Source="/resources/default.jpg" Stretch="Fill"/>
        <TextBlock x:Name="textBlock_nom" Text="Nom du projet ici" Margin="80,0,10,0" VerticalAlignment="Center" Foreground="White" FontSize="20"/>
        <Image x:Name="image_delete" Width="20" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Source="/ProjectManager/trash.png" Margin="0,5,5,0" Cursor="Hand" MouseDown="image_delete_MouseDown" />
    </Grid>
</UserControl>
