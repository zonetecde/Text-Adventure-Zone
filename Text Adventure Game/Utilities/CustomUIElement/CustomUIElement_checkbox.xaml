<UserControl x:Class="Text_Adventure_Game.Utilities.CustomUIElement.CustomUIElement_checkbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Text_Adventure_Game.Utilities.CustomUIElement"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50" >
    <Border Background="White" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="10,10,10,10">
        <Grid>
            <Image Cursor="Hand" x:Name="img_checked" Visibility="Hidden" Source="resources/checkbox_checked.png" MouseDown="img_checked_MouseDown"/>
            <Image Cursor="Hand"  x:Name="img_unchecked" Visibility="Hidden" Source="resources/checkbox_unchecked.png" MouseDown="img_unchecked_MouseDown"/>

        </Grid>
    </Border>
</UserControl>
